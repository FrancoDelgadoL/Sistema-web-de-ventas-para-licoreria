<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Asignar Roles - Panel Admin</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="~/css/Admin/AsignarRoles.css" rel="stylesheet">
</head>

<body>
    <!-- Sidebar -->
    <div class="sidebar shadow-sm">
        <div class="logo">
            <h3 class="mb-1 fw-bold">EZEL <span class="text-primary">Market</span></h3>
            <small class="text-light opacity-75">Panel de Administración</small>
        </div>

        <nav class="nav flex-column mt-4">
            <a class="nav-link" href="/Admin/Index"><i class="bi bi-house-door me-2"></i>Inicio</a>
            <a class="nav-link" href="/Admin/ListarUsuarios"><i class="bi bi-people me-2"></i>Usuarios</a>
            <a class="nav-link active" href="/Admin/AsignarRoles"><i class="bi bi-person-gear me-2"></i>Asignar
                Roles</a>
            <a class="nav-link" href="/Admin/ListarCupones"><i class="bi bi-ticket-perforated me-2"></i>Cupones</a>
            <a class="nav-link" href="/Admin/Perfil"><i class="bi bi-person me-2"></i>Perfil</a>
            <a class="nav-link" href="/Inventario/Index"><i class="bi bi-box-seam me-2"></i>Gestión de Inventario</a>
            <button type="button" class="nav-link text-danger w-100 text-start bg-transparent border-0"
                data-bs-toggle="modal" data-bs-target="#logoutModal">
                <i class="bi bi-box-arrow-right me-2"></i> Cerrar Sesión
            </button>
        </nav>

        <div class="user-info mt-auto text-center pt-4 border-top border-secondary-subtle">
            <p class="mb-1 fw-semibold">Administrador</p>
            <small class="text-light opacity-75">Último acceso: Hoy</small>
        </div>
    </div>

    <!-- Contenido Principal -->
    <div class="main-content">
        <div class="container-fluid">
            <div class="section-header d-flex align-items-center mb-4">
                <i class="bi bi-person-gear fs-3 text-primary me-2"></i>
                <h3 class="fw-semibold mb-0">Gestión de Usuarios y Roles</h3>
            </div>

            <!-- Mensajes -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- FORMULARIO NUEVO USUARIO -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-gradient text-white fw-semibold">
                    <i class="bi bi-person-plus me-2"></i>Agregar Nuevo Usuario
                </div>
                <div class="card-body">
                    <form id="formAgregarUsuario" method="post" class="user-form">
                        @Html.AntiForgeryToken()
                        <div class="row g-3">
                            <div class="col-md-6 form-group">
                                <label class="form-label fw-semibold">Nombre</label>
                                <input type="text" name="Nombre" class="form-control" required>
                                <span class="text-danger field-validation-valid" data-valmsg-for="Nombre"></span>
                            </div>
                            <div class="col-md-6 form-group">
                                <label class="form-label fw-semibold">Apellido</label>
                                <input type="text" name="Apellido" class="form-control" required>
                                <span class="text-danger field-validation-valid" data-valmsg-for="Apellido"></span>
                            </div>
                            <div class="col-md-6 form-group">
                                <label class="form-label fw-semibold">Email</label>
                                <input type="email" name="Email" class="form-control" required>
                            </div>
                            <div class="col-md-6 form-group">
                                <label class="form-label fw-semibold">Usuario</label>
                                <input type="text" name="UserName" class="form-control" required>
                            </div>
                            <div class="col-md-6 form-group">
                                <label class="form-label fw-semibold">Contraseña</label>
                                <input type="password" name="Password" class="form-control" required minlength="6">
                            </div>
                            <div class="col-md-6 form-group">
                                <label class="form-label fw-semibold">Confirmar Contraseña</label>
                                <input type="password" name="ConfirmPassword" class="form-control" required>
                            </div>
                            <div class="col-md-6 form-group">
                                <label class="form-label fw-semibold">Rol</label>
                                <select name="RolSeleccionado" class="form-select" required>
                                    <option value="">Seleccionar rol...</option>
                                    @foreach (var rol in Model.RolesDisponibles)
                                    {
                                        <option value="@rol.Value">@rol.Text</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-6 d-flex align-items-end">
                                <button type="button" class="btn btn-success w-100 shadow-sm submit-btn" id="btnConfirmarAgregar">
                                    <i class="bi bi-person-plus me-1"></i> Crear Usuario
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- TABLA DE USUARIOS -->
            <div class="card shadow-sm">
                <div class="card-header bg-gradient text-white fw-semibold">
                    <i class="bi bi-people me-2"></i>Usuarios Existentes - Asignar Roles
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table align-middle table-hover">
                            <thead>
                                <tr>
                                    <th>Usuario</th>
                                    <th>Nombre Completo</th>
                                    <th>Email</th>
                                    <th>Rol Actual</th>
                                    <th>Nuevo Rol</th>
                                    <th>Acción</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Usuarios != null && Model.Usuarios.Count > 0)
                                {
                                    foreach (var usuario in Model.Usuarios)
                                    {
                                        <tr class="fade-in">
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="https://ui-avatars.com/api/?name=@(usuario.Nombre)+@(usuario.Apellido)&background=0a192f&color=42a5f5&bold=true"
                                                        class="rounded-circle me-2" width="40" height="40">
                                                    <strong>@usuario.UserName</strong>
                                                </div>
                                            </td>
                                            <td>@usuario.Nombre @usuario.Apellido</td>
                                            <td class="text-primary fw-semibold">@usuario.Email</td>
                                            <td>
                                                <span class="badge 
                                                    @(usuario.Rol == "Administrador" ? "bg-danger" :
                                                      usuario.Rol == "Gerente" ? "bg-warning" :
                                                      usuario.Rol == "Inventario" ? "bg-success" :
                                                      usuario.Rol == "Cliente" ? "bg-primary" :
                                                      "bg-secondary")">
                                                    @usuario.Rol
                                                </span>
                                            </td>
                                            <td>
                                                <select class="form-select form-select-sm select-rol"
                                                    data-user-id="@usuario.Id">
                                                    <option value="">Seleccionar rol...</option>
                                                    @foreach (var rol in Model.RolesDisponibles)
                                                    {
                                                        <option value="@rol.Value">@rol.Text</option>
                                                    }
                                                </select>
                                            </td>
                                            <td>
                                                <button class="btn btn-sm btn-success btn-asignar" data-user-id="@usuario.Id"
                                                    disabled>
                                                    <i class="bi bi-check-lg me-1"></i>Asignar
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center py-5 text-muted">
                                            <i class="bi bi-people display-5 d-block mb-3"></i>
                                            No hay usuarios registrados
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modales -->
    <!-- Modal de Confirmación para Agregar Usuario -->
    <div class="modal fade" id="confirmarAgregarModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-person-plus me-2"></i> Confirmar Creación de Usuario
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>¿Estás seguro de que deseas crear el siguiente usuario?</p>
                    <div class="alert alert-info">
                        <strong id="modalNombreCompleto"></strong><br>
                        <small>Email: <span id="modalEmail"></span></small><br>
                        <small>Usuario: <span id="modalUserName"></span></small><br>
                        <small>Rol: <span id="modalRol"></span></small>
                    </div>
                    <p class="text-muted"><small>El usuario podrá iniciar sesión inmediatamente con la contraseña
                            proporcionada.</small></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-success" id="btnConfirmarEnviar">
                        <i class="bi bi-check-lg me-1"></i> Sí, Crear Usuario
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Logout Modal -->
    <div class="modal fade" id="logoutModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-box-arrow-right me-2"></i> Cerrar Sesión
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>¿Estás seguro de que deseas cerrar sesión?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Cerrar Sesión</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Modal para agregar usuario
            const btnConfirmarAgregar = document.getElementById('btnConfirmarAgregar');
            const btnConfirmarEnviar = document.getElementById('btnConfirmarEnviar');
            const formAgregarUsuario = document.getElementById('formAgregarUsuario');
            const confirmarAgregarModal = new bootstrap.Modal(document.getElementById('confirmarAgregarModal'));

            btnConfirmarAgregar.addEventListener('click', function () {
                // Validar formulario primero
                if (!formAgregarUsuario.checkValidity()) {
                    formAgregarUsuario.reportValidity();
                    return;
                }

                // Obtener datos del formulario
                const formData = new FormData(formAgregarUsuario);
                const nombre = formData.get('Nombre');
                const apellido = formData.get('Apellido');
                const email = formData.get('Email');
                const userName = formData.get('UserName');
                const rol = formData.get('RolSeleccionado');

                // Mostrar datos en el modal
                document.getElementById('modalNombreCompleto').textContent = nombre + ' ' + apellido;
                document.getElementById('modalEmail').textContent = email;
                document.getElementById('modalUserName').textContent = userName;
                document.getElementById('modalRol').textContent = rol;

                // Mostrar modal
                confirmarAgregarModal.show();
            });

            // Confirmar envío del formulario
            btnConfirmarEnviar.addEventListener('click', function () {
                // Cambiar la acción del formulario
                formAgregarUsuario.action = '/Admin/AgregarNuevoUsuario';
                // Enviar formulario
                formAgregarUsuario.submit();
            });

            // Habilitar botón cuando se selecciona un rol (para usuarios existentes)
            document.querySelectorAll('.select-rol').forEach(select => {
                select.addEventListener('change', function () {
                    const userId = this.getAttribute('data-user-id');
                    const btnAsignar = document.querySelector(`.btn-asignar[data-user-id="${userId}"]`);
                    btnAsignar.disabled = !this.value;
                });
            });

            // Asignar rol a usuario existente
            document.querySelectorAll('.btn-asignar').forEach(btn => {
                btn.addEventListener('click', function () {
                    const userId = this.getAttribute('data-user-id');
                    const select = document.querySelector(`.select-rol[data-user-id="${userId}"]`);
                    const rolSeleccionado = select.value;

                    if (!rolSeleccionado) {
                        alert('Por favor selecciona un rol');
                        return;
                    }

                    if (confirm(`¿Estás seguro de asignar el rol "${rolSeleccionado}" a este usuario?`)) {
                        // Crear formulario para enviar
                        const form = document.createElement('form');
                        form.method = 'POST';
                        form.action = '/Admin/AsignarRol';

                        // CSRF Token
                        const csrfToken = document.querySelector('input[name="__RequestVerificationToken"]').value;
                        const csrfInput = document.createElement('input');
                        csrfInput.type = 'hidden';
                        csrfInput.name = '__RequestVerificationToken';
                        csrfInput.value = csrfToken;
                        form.appendChild(csrfInput);

                        // Datos
                        const userIdInput = document.createElement('input');
                        userIdInput.type = 'hidden';
                        userIdInput.name = 'usuarioId';
                        userIdInput.value = userId;
                        form.appendChild(userIdInput);

                        const rolInput = document.createElement('input');
                        rolInput.type = 'hidden';
                        rolInput.name = 'rolSeleccionado';
                        rolInput.value = rolSeleccionado;
                        form.appendChild(rolInput);

                        document.body.appendChild(form);
                        form.submit();
                    }
                });
            });

            // Validación de confirmación de contraseña
            const password = document.querySelector('input[name="Password"]');
            const confirmPassword = document.querySelector('input[name="ConfirmPassword"]');

            function validatePassword() {
                if (password.value !== confirmPassword.value) {
                    confirmPassword.setCustomValidity("Las contraseñas no coinciden");
                } else {
                    confirmPassword.setCustomValidity("");
                }
            }

            password.addEventListener('change', validatePassword);
            confirmPassword.addEventListener('keyup', validatePassword);
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Admin/AsignarRoles.js"></script>
</body>

</html>