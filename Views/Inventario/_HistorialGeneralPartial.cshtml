@model IEnumerable<Ezel_Market.Models.HistorialInventario>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover table-sm">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Cantidad Anterior</th>
                    <th>Cantidad Nueva</th>
                    <th>Tipo de Movimiento</th>
                    <th>Fecha</th>
                    <th>Usuario</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var historial in Model)
                {
                    <tr>
                        <td>@historial.Inventario?.NombreProducto</td>
                        <td>@historial.CantidadAnterior</td>
                        <td>@historial.CantidadNueva</td>
                        <td>@historial.TipoMovimiento</td>
                        <td>@historial.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            @if (!string.IsNullOrEmpty(historial.UsuarioId))
                            {
                                // Aquí puedes buscar el nombre del usuario si tienes la lógica de usuarios cargada
                                // Por ahora, solo mostramos el ID
                                <span>@historial.UsuarioId</span>
                            }
                            else
                            {
                                <span>Sistema</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        No hay historial de inventario disponible.
    </div>
}