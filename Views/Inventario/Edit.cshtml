@model Ezel_Market.Models.Inventario

@{
    ViewData["Title"] = "Editar Producto";
}

<h1>Editar producto</h1>

<div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="NombreProducto"></label>
        <input asp-for="NombreProducto" class="form-control" />
        <span asp-validation-for="NombreProducto" class="text-danger"></span>
    </div>

    <!-- ✅ CORREGIDO: Cambiar de select simple a checkboxes para múltiples categorías -->
    <div class="form-group">
        <label>Categorías</label>
        <div>
            @if (ViewBag.Categorias != null)
            {
                var categoriasSeleccionadas = ViewBag.CategoriasSeleccionadas as List<int> ?? new List<int>();
                
                foreach (var categoria in ViewBag.Categorias as List<SelectListItem>)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="CategoriasSeleccionadas" 
                               value="@categoria.Value" id="categoria_@categoria.Value"
                               @(categoriasSeleccionadas.Contains(int.Parse(categoria.Value)) ? "checked" : "") />
                        <label class="form-check-label" for="categoria_@categoria.Value">
                            @categoria.Text
                        </label>
                    </div>
                }
            }
            else
            {
                <p class="text-muted">No hay categorías disponibles</p>
            }
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Cantidad"></label>
        <input asp-for="Cantidad" class="form-control" type="number" min="0" />
        <span asp-validation-for="Cantidad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PrecioCompra"></label>
        <div class="input-group">
            <span class="input-group-text">S/</span>
            <input asp-for="PrecioCompra" class="form-control" type="number" min="0" step="0.01" />
        </div>
        <span asp-validation-for="PrecioCompra" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PrecioVentaMinorista"></label>
        <div class="input-group">
            <span class="input-group-text">S/</span>
            <input asp-for="PrecioVentaMinorista" class="form-control" type="number" min="0" step="0.01" />
        </div>
        <span asp-validation-for="PrecioVentaMinorista" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PrecioVentaMayorista"></label>
        <div class="input-group">
            <span class="input-group-text">S/</span>
            <input asp-for="PrecioVentaMayorista" class="form-control" type="number" min="0" step="0.01" />
        </div>
        <span asp-validation-for="PrecioVentaMayorista" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaIngreso"></label>
        <input asp-for="FechaIngreso" class="form-control" type="date" />
        <span asp-validation-for="FechaIngreso" class="text-danger"></span>
    </div>

    <!-- Mostrar imagen actual (si existe) -->
    @if (!string.IsNullOrEmpty(Model.Imagen))
    {
        <div class="form-group mt-3">
            <label>Imagen actual:</label>
            <br />
            <img src="@Model.Imagen" alt="Imagen del producto" width="180" class="border rounded" />
        </div>
    }

    <!-- Campo para subir nueva imagen -->
    <div class="form-group mt-3">
        <label for="ImagenArchivo">Cambiar imagen (opcional):</label>
        <input type="file" name="ImagenArchivo" class="form-control" accept="image/*" />
    </div>

    <!-- ✅ AGREGADO: Campos para marca y grado alcohol -->
    <div class="form-group">
        <label asp-for="Marca"></label>
        <input asp-for="Marca" class="form-control" />
        <span asp-validation-for="Marca" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GradoAlcohol"></label>
        <input asp-for="GradoAlcohol" class="form-control" type="number" min="0" step="0.1" />
        <span asp-validation-for="GradoAlcohol" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}