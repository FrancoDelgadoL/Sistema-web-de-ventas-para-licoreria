@model Ezel_Market.Models.Inventario

@{
    ViewData["Title"] = "Nuevo Producto";
}

<h1>Agregar nuevo producto al Inventario</h1>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="NombreProducto"></label>
        <input asp-for="NombreProducto" class="form-control" />
        <span asp-validation-for="NombreProducto" class="text-danger"></span>
    </div>
    
    <!-- ✅ CORRECCIÓN COMPLETA: Manejo seguro de categorías -->
    <div class="form-group">
        <label>Categorías</label>
        <div>
            @{
                // ✅ CORRECCIÓN: Manejo seguro del ViewBag
                var categorias = ViewBag.Categorias as List<SelectListItem>;
            }
            
            @if (categorias != null && categorias.Any())
            {
                foreach (var categoria in categorias)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="CategoriasSeleccionadas" value="@categoria.Value" id="categoria_@categoria.Value" />
                        <label class="form-check-label" for="categoria_@categoria.Value">
                            @categoria.Text
                        </label>
                    </div>
                }
            }
            else
            {
                <p class="text-warning">No hay categorías disponibles en el sistema</p>
            }
        </div>
    </div>
    
    <div class="form-group">
        <label asp-for="Cantidad"></label>
        <input asp-for="Cantidad" class="form-control" type="number" min="0" />
        <span asp-validation-for="Cantidad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PrecioCompra"></label>
        <div class="input-group">
            <span class="input-group-text">S/</span>
            <input asp-for="PrecioCompra" class="form-control" type="number" min="0" step="0.01" />
        </div>
        <span asp-validation-for="PrecioCompra" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PrecioVentaMinorista"></label>
        <div class="input-group">
            <span class="input-group-text">S/</span>
            <input asp-for="PrecioVentaMinorista" class="form-control" type="number" min="0" step="0.01" />
        </div>
        <span asp-validation-for="PrecioVentaMinorista" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PrecioVentaMayorista"></label>
        <div class="input-group">
            <span class="input-group-text">S/</span>
            <input asp-for="PrecioVentaMayorista" class="form-control" type="number" min="0" step="0.01" />
        </div>
        <span asp-validation-for="PrecioVentaMayorista" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Marca"></label>
        <input asp-for="Marca" class="form-control" />
        <span asp-validation-for="Marca" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GradoAlcohol"></label>
        <input asp-for="GradoAlcohol" class="form-control" type="number" step="0.1" min="0" max="100" />
        <span asp-validation-for="GradoAlcohol" class="text-danger"></span>
    </div>

    <!-- Campo para subir imagen -->
    <div class="form-group">
        <label for="Imagen">Imagen del producto</label>
        <input type="file" name="ImagenArchivo" class="form-control" accept="image/*" />
    </div>

    <button type="submit" class="btn btn-success mt-2">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Volver</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}