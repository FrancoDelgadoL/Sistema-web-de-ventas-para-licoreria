@section Scripts {
<script>
    // ========== VARIABLES GLOBALES ==========
    let carritoData = {};
    let descuentoAplicado = 0;
    let cuponAplicado = '';
    let productoActual = null;

    // ========== INICIALIZACI√ìN ==========
    document.addEventListener('DOMContentLoaded', function() {
        inicializarEventListeners();
        cargarCarrito();
    });

    // ========== FUNCI√ìN PRINCIPAL DE EVENT LISTENERS ==========
    function inicializarEventListeners() {
        // Bot√≥n para ver cupones
        const btnVerCupones = document.getElementById('btn-ver-cupones');
        if (btnVerCupones) {
            btnVerCupones.addEventListener('click', function(e) {
                e.preventDefault();
                cargarCuponesDisponibles();
                abrirModal('modalCupones');
            });
        }

        // Bot√≥n del carrito
        const carritoBtn = document.getElementById('carrito-btn');
        if (carritoBtn) {
            carritoBtn.addEventListener('click', function(e) {
                e.preventDefault();
                cargarCarrito();
                abrirModal('modalCarrito');
            });
        }

        // Delegado de eventos para botones din√°micos
        document.addEventListener('click', function(e) {
            if (e.target.matches('.btn-agregar-carrito')) {
                const inventarioId = e.target.getAttribute('data-id');
                abrirModalCantidad(inventarioId);
            }
            
            if (e.target.matches('.btn-ver-detalles')) {
                const inventarioId = e.target.getAttribute('data-id');
                cargarDetallesProducto(inventarioId);
            }
        });

        // Filtro por categor√≠a
        const filtroCategoria = document.getElementById('categoria-filter');
        if (filtroCategoria) {
            filtroCategoria.addEventListener('change', filtrarPorCategoria);
        }

        // Inicializar otros listeners
        inicializarListenersModales();
    }

    function inicializarListenersModales() {
        // Confirmar agregar al carrito
        const btnConfirmar = document.getElementById('btn-confirmar-agregar');
        if (btnConfirmar) {
            btnConfirmar.addEventListener('click', confirmarAgregarAlCarrito);
        }

        // Controles de cantidad
        document.getElementById('btn-incrementar')?.addEventListener('click', incrementarCantidad);
        document.getElementById('btn-decrementar')?.addEventListener('click', decrementarCantidad);

        // Cup√≥n
        document.getElementById('btn-aplicar-cupon')?.addEventListener('click', aplicarCupon);

        // Pago
        document.getElementById('btn-proceder-pago')?.addEventListener('click', procederPago);
        document.getElementById('btn-confirmar-pedido')?.addEventListener('click', confirmarPedido);
        document.getElementById('btn-limpiar-carrito')?.addEventListener('click', limpiarCarrito);

        // Agregar desde detalles
        const btnAgregarDesdeDetalles = document.getElementById('btn-agregar-desde-detalles');
        if (btnAgregarDesdeDetalles) {
            btnAgregarDesdeDetalles.addEventListener('click', function() {
                if (productoActual && productoActual.id) {
                    bootstrap.Modal.getInstance(document.getElementById('modalDetalles'))?.hide();
                    abrirModalCantidad(productoActual.id); 
                } else {
                    mostrarAlerta('No se pudo obtener el ID del producto.', 'error');
                }
            });
        }
    }

    // ========== FUNCIONES DE MODALES ==========
    function abrirModal(modalId) {
        const modalElement = document.getElementById(modalId);
        if (modalElement) {
            const modal = new bootstrap.Modal(modalElement);
            modal.show();
        }
    }

    // ========== FUNCIONES DE CUPONES ==========
    function cargarCuponesDisponibles() {
        if (!usuarioEstaAutenticado()) {
            document.getElementById('cupones-content').innerHTML = `
                <div class="alert alert-warning text-center">
                    <i class="fas fa-exclamation-triangle fa-2x mb-3"></i>
                    <h5>Debes iniciar sesi√≥n para ver los cupones disponibles</h5>
                    <p>Inicia sesi√≥n para acceder a todas las promociones</p>
                </div>
            `;
            return;
        }

        fetch('/Cliente/ObtenerTodosCuponesDisponibles')
            .then(response => {
                if (response.status === 401) {
                    document.getElementById('cupones-content').innerHTML = `
                        <div class="alert alert-warning text-center">
                            <i class="fas fa-exclamation-triangle fa-2x mb-3"></i>
                            <h5>Debes iniciar sesi√≥n para ver los cupones disponibles</h5>
                            <p>Inicia sesi√≥n para acceder a todas las promociones</p>
                        </div>
                    `;
                    return null;
                }
                if (!response.ok) {
                    throw new Error('Error al cargar cupones');
                }
                return response.json();
            })
            .then(data => {
                if (data && data.success) {
                    mostrarCuponesEnModal(data.cupones);
                } else {
                    document.getElementById('cupones-content').innerHTML = `
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle fa-2x mb-3"></i>
                            <h5>No hay cupones disponibles</h5>
                            <p>Vuelve pronto para nuevas promociones</p>
                        </div>
                    `;
                }
            })
            .catch(error => {
                console.error('Error al cargar cupones:', error);
                document.getElementById('cupones-content').innerHTML = `
                    <div class="alert alert-danger text-center">
                        <i class="fas fa-exclamation-circle fa-2x mb-3"></i>
                        <h5>Error al cargar cupones</h5>
                        <p>Intenta nuevamente m√°s tarde</p>
                    </div>
                `;
            });
    }

    function mostrarCuponesEnModal(cupones) {
        let html = '';
        
        if (cupones && cupones.length > 0) {
            html = `
                <div class="row">
                    <div class="col-12 mb-3">
                        <p class="text-muted">Se encontraron ${cupones.length} cupones disponibles</p>
                    </div>
                </div>
                <div class="row">
            `;
            
            cupones.forEach(cupon => {
                const esValido = cupon.esValido;
                const bgClass = esValido ? 'border-success' : 'border-secondary';
                const textClass = esValido ? '' : 'text-muted';
                
                html += `
                    <div class="col-md-6 mb-3">
                        <div class="card h-100 ${bgClass}">
                            <div class="card-body ${textClass}">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="card-title">${cupon.codigo}</h5>
                                    <span class="badge ${esValido ? 'bg-success' : 'bg-secondary'}">
                                        ${esValido ? 'Disponible' : 'No disponible'}
                                    </span>
                                </div>
                                <p class="card-text">${cupon.descripcion}</p>
                                <div class="mb-2">
                                    <strong class="text-primary">Descuento: ${cupon.descuento}</strong>
                                </div>
                                <div class="small">
                                    <div><i class="fas fa-calendar-alt me-1"></i> V√°lido hasta: ${cupon.expiracion}</div>
                                    <div><i class="fas fa-shopping-bag me-1"></i> ${cupon.minimoCompraTexto}</div>
                                    <div><i class="fas fa-ticket-alt me-1"></i> Usos disponibles: ${cupon.usosDisponibles}</div>
                                </div>
                                ${!esValido ? `
                                    <div class="mt-2">
                                        <small class="text-danger"><i class="fas fa-info-circle me-1"></i> ${cupon.mensajeValidacion}</small>
                                    </div>
                                ` : ''}
                            </div>
                        </div>
                    </div>
                `;
            });
            
            html += '</div>';
        } else {
            html = `
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle fa-2x mb-3"></i>
                    <h5>No hay cupones disponibles</h5>
                    <p>Vuelve pronto para nuevas promociones</p>
                </div>
            `;
        }
        
        document.getElementById('cupones-content').innerHTML = html;
    }

    // ========== FUNCIONES DEL CAT√ÅLOGO ==========
    function filtrarPorCategoria() {
        const categoriaId = this.value;
        const productos = document.querySelectorAll('.product-card');
        let productosVisibles = 0;
    
        productos.forEach(producto => {
            const categoriasProducto = producto.getAttribute('data-categoria');
    
            if (categoriaId === '0' || (categoriasProducto && categoriasProducto.split(',').includes(categoriaId))) {
                producto.style.display = 'block';
                productosVisibles++;
            } else {
                producto.style.display = 'none';
            }
        });
    
        document.getElementById('no-products').style.display = 
            productosVisibles === 0 ? 'block' : 'none';
    }

    // ========== FUNCIONES DE DETALLES DEL PRODUCTO ==========
    function cargarDetallesProducto(inventarioId) {
        fetch(`/Cliente/ObtenerDetallesProducto?id=${inventarioId}`)
            .then(response => {
                if (!response.ok) throw new Error('Error al obtener detalles');
                return response.json();
            })
            .then(data => {
                productoActual = { 
                    id: inventarioId,
