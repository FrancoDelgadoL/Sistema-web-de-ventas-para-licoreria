@page
@model LoginModel
@{
    ViewData["Title"] = "Iniciar Sesión";
}

<style>
    html,
    body {
        height: 100%;
        margin: 0;
        padding: 0;
        background: linear-gradient(135deg, #f8f4f0, #e8e3de);
        overflow-x: hidden;
        /* evita desplazamiento lateral */
    }

    main {
        min-height: calc(100vh - 140px);
        /* resta header y footer */
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 0;
    }

    .login-card {
        width: 380px;
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        transition: all 0.3s ease;
    }

    .login-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
    }

    h2 {
        color: #6b2737;
        text-align: center;
        margin-bottom: 1.5rem;
        font-weight: 600;
    }

    .btn-primary {
        background-color: #6b2737;
        border: none;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #8a3248;
    }

    .form-control:focus {
        border-color: #6b2737;
        box-shadow: 0 0 0 0.2rem rgba(107, 39, 55, 0.25);
    }

    a {
        color: #8a3248;
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
    }
</style>

<main>
    <div class="login-card">
        <h2>Iniciar Sesión</h2>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username"
                    placeholder="name@example.com" />
                <label asp-for="Input.Email">Correo electrónico</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password"
                    placeholder="Contraseña" />
                <label asp-for="Input.Password">Contraseña</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label class="form-check-label" asp-for="Input.RememberMe"></label>
            </div>

            <button id="login-submit" type="submit" class="btn btn-primary w-100 mb-3">Entrar</button>

            <div class="text-center">
                <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrarse como nuevo usuario</a>
                </p>
            </div>
        </form>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}